<!DOCTYPE html>
@using Dominio
@{
	string UsuarioLogueado = Context.Session.GetString("Correo");
	Sistema sistema = Sistema.ObtenerInstancia();
	bool hayUsuarioLogueado = UsuarioLogueado != null;
	bool esCliente=false;
	bool esAdmin = false;
	if(hayUsuarioLogueado){
		esCliente = sistema.ObtenerUsuarioSegunCorreo(UsuarioLogueado) is Cliente;
		esAdmin = sistema.ObtenerUsuarioSegunCorreo(UsuarioLogueado) is Administrador;
	}
}
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]ORT Airlines</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/AppWeb.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		@if (ViewBag.OcultarNavbar != true)
		{
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<div class="container-fluid">

						<ul class="navbar-nav flex-grow-1 container">
							<div class="container d-flex align-items-center justify-content-start">
								<li class="nav-item">
									<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ORT Airlines</a>
								</li>

								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
								</li>
							</div>

							<div class="container d-flex justify-content-end">
								@if (hayUsuarioLogueado)
								{									
									@if (esCliente)
									{
										<li class="nav-item">
											<a class="nav-link text-dark" asp-area="" asp-controller="Pasaje" asp-action="VerPasajesComprados">Mis pasajes</a>
										</li>			
										
										<li class="nav-item">
												<a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="VerPerfil">Mi perfil</a>
										</li>

									}
									else
									{
										<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Pasaje" asp-action="VerListadoPasajes">Listado Pasajes</a>
										</li>
										<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="VerListadoClientes">Listado Clientes</a>
										</li>
									}								
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="LogIn" asp-action="VerConfirmarLogOut">Cerrar Sesion</a>
									</li>
								}
								else
								{
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="LogIn" asp-action="VerInicioSesion">Iniciar sesion</a>
									</li>
									
								}
							</div>
						</ul>
					</div>

				</div>			
			</nav>
		}
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Index">Obligatorio - Agustin Feijoo y Viviana Teng</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
