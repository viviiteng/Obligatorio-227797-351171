
<section id="hero" class="container-fluid">
    <div class="row justify-content-center text-center">
        @if(ViewBag.UsuarioCorreo != null){
            <h1 class="fw-bold display-4 mb-4 col-12">¡Welcome @ViewBag.UsuarioCorreo!</h1>
        }
        else
        {
            <h1 class="fw-bold display-4 mb-4 col-12">¡Bienvenidos a ORT Airlines!</h1>
        }

        <div class="col-6">
            <a href="@Url.Action("ListarVuelos", "Vuelo")" class="btn btn-primary btn-lg">Ver todos los vuelos</a>
        </div>
    </div>
</section>