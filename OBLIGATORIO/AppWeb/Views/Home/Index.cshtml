@using Dominio

<section id="hero" class="container-fluid py-5 bg-light">
    <div class="row justify-content-center text-center">
        <div class="col-12">
            @if (ViewBag.UsuarioCorreo != null)
            {
                <h1 class="fw-bold display-4 mb-4">¡Welcome @ViewBag.UsuarioCorreo!</h1>
            }
            else
            {
                <h1 class="fw-bold display-4 mb-3">¡Bienvenidos a ORT Airlines!</h1>  
                <h2 class="fw-semibold mb-4 fs-4">Inicie sesión para acceder a los vuelos</h2>
            }
        </div>

        @if (ViewBag.TipoUsuario != null && ViewBag.TipoUsuario != Rol.ADMIN.ToString())
        {
            <div class="col-12 col-md-6">
                <a href="@Url.Action("ListarVuelos", "Vuelo")" class="btn btn-primary btn-lg px-4 py-2">Ver todos los vuelos</a>
            </div>
        }
    </div>
</section>
