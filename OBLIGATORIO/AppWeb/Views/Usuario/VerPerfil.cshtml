@using Dominio
@model Cliente

<section class="py-5">
	<div class="container d-flex align-items-center justify-content-center">
		<div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
			<div class="card shadow-lg border-0 rounded-4">
				<div class="card-body p-5">
					<h2 class="text-center mb-4">Mi perfil</h2>

					@if (ViewBag.Error != null)
					{
						<div class="alert alert-danger text-center mb-3" role="alert">
							@ViewBag.Error
						</div>
					}

					<form id="perfilForm">
						<div class="mb-3">
							<label for="nombreCompletoPerfil" class="form-label">Nombre completo</label>
							<input type="text" id="nombreCompletoPerfil" class="form-control" value="@Model.Nombre" disabled>
						</div>

						<div class="mb-3">
							<label for="correoPerfil" class="form-label">Correo</label>
							<input type="email" id="correoPerfil" class="form-control" value="@Model.Correo" disabled>
						</div>

						<div class="mb-3">
							<label for="cedulaPerfil" class="form-label">Cédula</label>
							<input type="text" id="cedulaPerfil" class="form-control" value="@Model.Cedula" disabled>
						</div>

						<div class="mb-3">
							<label for="nacionalidadPerfil" class="form-label">Nacionalidad</label>
							<input type="text" id="nacionalidadPerfil" class="form-control" value="@Model.Nacionalidad" disabled>
						</div>

						@if (Model is ClientePremium unClientePremium)
						{
							<div class="mb-3">
								<label for="puntosPerfil" class="form-label">Puntos acumulados</label>
								<input type="text" id="puntosPerfil" class="form-control" value="@unClientePremium.PuntosAcumulados" disabled>
							</div>
						}
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
